#!/bin/bash

PACKAGES="curl emacs git htop mc ncdu powerline stow tmux vim-gtk3 zsh"

function install() {
    sudo apt-get -y install ${PACKAGES}
}

function uninstall() {
    sudo apt-get -y remove ${PACKAGES}
}

if [[ $1 == "install" ]]; then
    install
elif [[ $1 == "uninstall" ]]; then
    uninstall
else
    echo "Usage: utilities-installer {install|uninstall}"
fi
